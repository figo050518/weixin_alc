<?xml version="1.0" encoding="UTF-8"?>
<!--涉及到修改这个文件的任何改动，请告诉我下xiahan，发布时需要替换-->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>weixin-frontend</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath*:/context/spring/*.xml
        </param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:context/log/log4j.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
			com.fcgo.weixin.web.conf.SystemConfigListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
    	org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
  </listener>
 
  <filter>
    <filter-name>encoding-filter</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encoding-filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  	  <filter>
		<filter-name>openIdAuthFilter</filter-name>
		<filter-class>
			com.fcgo.weixin.filter.OpenIdAuthFilter
		</filter-class>
		</filter>
		<filter-mapping>
			<filter-name>openIdAuthFilter</filter-name>
			<url-pattern>/*</url-pattern>
		</filter-mapping>
  
     <filter>
		<filter-name>signInFilter</filter-name>
		<filter-class>
			com.fcgo.weixin.filter.SignInFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>signInFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>
			com.fcgo.weixin.filter.FrontSessionFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <filter>
    <filter-name>httpMethodFilter</filter-name>
    <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter
		</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>httpMethodFilter</filter-name>
    <servlet-name>weixinFrontendServlet</servlet-name>
  </filter-mapping>
 
  <filter>
    <filter-name>shallowEtagFilter</filter-name>
    <filter-class>org.springframework.web.filter.ShallowEtagHeaderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>shallowEtagFilter</filter-name>
    <servlet-name>weixinFrontendServlet</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>shallowEtagFilter</filter-name>
    <url-pattern>/page-not-found</url-pattern>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/page-not-found</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/page-not-found</location>
  </error-page>
  <servlet>
    <servlet-name>weixinFrontendServlet</servlet-name>
	    <servlet-class>
	    	org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
      classpath:/context/spring/application-view.xml
	</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>weixinFrontendServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file></welcome-file>
  </welcome-file-list>
</web-app>