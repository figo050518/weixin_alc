<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fcgo.weixin.persist.dao.IProductImageDAO" >
   <insert id ="batchInsert" parameterType="java.util.List" >
		<selectKey resultType ="java.lang.Integer" keyProperty= "id"
				   order= "AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey >
		INSERT INTO pdt_product_image (is_delete,create_time,update_time,img_url,create_name,update_name,display_order,product_id)
		VALUES
		<foreach collection="list" item="item" index="index" separator="," >
			(#{item.isDelete},#{item.createTime},#{item.updateTime},#{item.imgUrl},#{item.createName},#{item.updateName},#{item.displayOrder},#{item.productId})
		</foreach>
	</insert>
	
	<update id="batchUpdate"  parameterType="java.util.List">  
        
          <foreach collection="list" item="item" index="index" open="" close=""   separator=";">  
                update pdt_product_image   
         		set
                display_order=#{item.displayOrder,jdbcType=INTEGER}, img_url=#{item.imgUrl,jdbcType=VARCHAR},update_time=#{item.updateTime,jdbcType=TIMESTAMP}, update_name=#{item.updateName,jdbcType=VARCHAR} 
                where id = #{item.id,jdbcType=INTEGER}  
         </foreach>  
    </update> 
</mapper>