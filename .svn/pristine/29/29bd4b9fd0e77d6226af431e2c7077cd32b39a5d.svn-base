//获取实时分页数据
function getResponseData(obj){
	var response=new Array();
	//查询被选中的,初次
	if(obj==0){
		pageIndex=1;//初次加载，从第一页开始
	}else{
		pageIndex=obj+1;
	}
	
	$.ajax({
		type:'post',
		url:'/uc/productGroup/list',
		data:{"pageIndex":pageIndex,'needCount':true},
		async:false,
		success:function(obj){
			response = obj.groups;
			var html="";
			var blankHtml="";
			if(response==0 && obj=="0"){
				var blankHtml="<div class='blankState'>"+
								"<div class='blankImgDiv'>"+
									"<img src='/resources/images/orderBlank.png' class='blankImg'/>"+
								"</div>"+
								"<div class='blankText'>您还没有相关订单哦！</div>"+
								"<div class='blankBtnDiv'>"+
									"<button class='blankBtn'>这是按钮</button>"+
								"</div></div>";
				$("#pullrefresh").remove();
				$(".footerFixed").remove();
				$(".head").after(blankHtml);
			}else{
				for(var e in response){
					html+="<div class='contentItem' onClick='view("+response[e].id+")'><div class='itemText'>"+response[e].groupName+"</div><div class='itemImg'><img src='img/next1.png'/></div><div class='itemNum'>"+response[e].productCount+"</div></div>";
				}
				$("#content").html(html);
			}
		}
	});
}



function view(id){
	window.location.href="/uc/product/initList?groupId="+id;
}
