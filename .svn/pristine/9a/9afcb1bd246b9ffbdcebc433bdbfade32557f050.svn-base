body {
	padding: 0;
	margin: 0;
	background: #fff;
}

.header {
	width: 100%;
	position: relative;
}

.headerbanner {
	width: 100%;
	height: 150px;
	background: url(/resources/images/0052_foodsense.jpg) no-repeat center center;
	background-size: 100% 100%;
	position: relative;
}

.shopLogo {
	position: relative;
	width: 80px;
	height: 80px;
	background: #fff;
	left: 50%;
	margin-left: -40px;
	margin-top: -50px;
}

.shopLogo img {
	width: : 76px;
	height: 76px;
	position: absolute;
	margin-top: 2px;
	margin-left: 2px;
}

.shopname {
	width: 100%;
	text-align: center;
	height: 30px;
	position: relative;
	line-height: 30px;
	font-size: 16px;
	color: #333;
}

.shopInfo {
	width: 90%;
	text-align: center;
	position: relative;
	line-height: 25px;
	font-size: 14px;
	margin-left: 5%;
	color: #999;
}

.classify {
	width: 100%;
	position: relative;
}

.classifyone {
	width: 100%;
	position: relative;
	display: -webkit-flex;
	/* Safari */
	display: flex;
	flex-direction: row;
    flex-wrap: wrap;
}

.itemClass {
	width:25vw;
	text-align: center;
	height: 80px;
	position: relative;
}

#imgDiv {
	width: 50px;
	height: 50px;
	background: #f5f5f5;
	border-radius: 50%;
	position: relative;
	left: 50%;
	margin-left: -25px;
}

#imgDiv img {
	width: 30px;
	height: 30px;
	margin-top:10px;
}

.itemClass p {
	font-size: 14px;
	color: #666;
}

.recommended {
	width: 100%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	font-size: 16px;
	color: #333;
}

.recommendedCon {
	width: 100%;
	position: relative;
}

.recommendedOne {
	width: 45vw;
	border-bottom: 1px solid #eee;
	margin: 2.5vw;
	padding: 2.5vw 0;
	float: left;
	position: relative;
}

.recommendedOne img {
	width: 30vw;
	height: 30vw;
	position: relative;
}

.fahuo {
	width: 100%;
	text-align: left;
	line-height:6vw;
	position: relative;
	font-size: 3.5vw;
	color: #999;
}

.pdtName {
	width: 100%;
	height: 12vw;
	line-height: 6vw;
	font-size: 4vw;
	text-align: left;
}

.pdtPrice {
	text-align: left;
	color: #E62234;
	height: 6vw;
	line-height: 6vw;
}

.mui-table-view-cell:after {
	height: 0px;
}

.mui-table-view:after {
	height: 0px;
}

.mui-pull-bottom-pocket {
	height: 50px;
}

#pullrefresh {
	background: #fff;
	top:280px !important;
	margin-bottom: 50px;
	background: #fff;
}