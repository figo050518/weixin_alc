package com.fcgo.weixin.controller.facade.assembler;

import org.springframework.stereotype.Component;

import com.fcgo.weixin.controller.facade.dto.UserInfoDTO;
import com.fcgo.weixin.interfaces.AbstractDTOAssembler;
import com.fcgo.weixin.persist.po.UserInfoPO;

/**
 * 自定义栏目内容DTO-PO转换类
 * 
 * @author xiahan
 */
@Component
public class UserInfoAssembler extends AbstractDTOAssembler<UserInfoDTO, UserInfoPO> {

    @Override
    public UserInfoDTO toDTO(UserInfoPO domain) {
        UserInfoDTO dto = new UserInfoDTO();
        dto.setId(domain.getId());
        dto.setUserName(domain.getUserName());
        dto.setPassword(domain.getPassword());
        return dto;
    }

    @Override
    public UserInfoPO fromDTO(UserInfoDTO dto) {
        UserInfoPO po = new UserInfoPO();
        po.setId(dto.getId());
        po.setUserName(dto.getUserName());
        po.setPassword(dto.getPassword());
        return po;
    }

}
