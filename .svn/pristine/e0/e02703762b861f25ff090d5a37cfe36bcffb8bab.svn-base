/*点击选取默认地址*/
$(".GoodsCheck").click(function() {
    if($(this).is(':checked')){
    	var id=$(this).parents(".oneAddressDiv").find(".addressId").val(); 
		$.ajax({
	        type:'get',
	        url:"?id="+id,
		    dataType:'JSON',
	        async: false,
	        success: function(result) {
	        	if(result=='1'){
	        		$(".GoodsCheck").prop('checked', false);
     				$(this).prop('checked', true);
	        		Info.view('修改成功！');
	        	}
	        	if(result=='0'){
	        		Info.view('修改失败');
	        	}
	        }
		});
    }
    
});
  
/*删除地址*/
function deleteAddress(obj){
	var id=$(this).parents(".oneAddressDiv").find(".addressId").val();  
	if(confirm("确定要删除吗？"))
	 {
			$.ajax({
		        type:'get',
		        url:"?id="+id,
			    dataType:'JSON',
		        async: false,
		        success: function(result) {
		        	if(result=='1'){
		        		Info.view('删除成功！');
		        		$(this).parents(".oneAddressDiv").remove();
		        	}
		        	if(result=='0'){
		        		Info.view('删除失败');
		        	}
		        }
			});
	}
}

