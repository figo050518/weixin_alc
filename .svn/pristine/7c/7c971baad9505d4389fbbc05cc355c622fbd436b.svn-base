*{
	padding: 0;
	margin: 0;
}
.clear{
	clear: both;
}
body{
	font-family: helvetica,"microsoft yahei";
	color: #333;
	background: #FAFAFA;
	font-size: 62.5%;
}
.head{
	height:50px;
	background: #D13600;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 101;
}
.title{
	line-height: 50px;
	font-size: 16px;
	color: #FFFFFF;
	text-align: center;
}
.return{
	position: absolute;
	height: 40px;
	top: 6px;
	line-height: 40px;
	font-size: 16px;
	color: #fff;
}
.returnImg{
	position: relative;
    top: 5px;
    display: inline-block;
    margin-left: 3px;
    width: 24px;
    height: 24px;
    background-repeat: no-repeat;
    background-image: url(/resources/images/returnWhite.png);
    background-size: 24px 24px;
}
.addressUp{
	width: 100%;
	background: #fff;
	position: relative;
}
.addressLeft{
	width: 15%;
	float: left;
	text-align: right;
	height: 100%;
}
.addressImg1{
	position:absolute;
  top:50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
	width: 16px;
}
.addressMiddle{
	width: 80%;
	float: left;
}
.addressRight{
	width: 15%;
	float: left;
	text-align: left;
}
.addressImg2{
	position:absolute;
  top:50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
	width: 10px;
}
.consignee{
	font-size: 1.4em;
	float: left;
}
.mobile{
	float: right;
	font-size: 1.4em;
}
.address{
	font-size: 1.4em;
	margin-top:5px;
	padding-bottom: 3vw;
}


.deleteDiv{
	float: right;
	height: 25px;
	margin-right:7%;
}
.deleteImg{
	float: left;
	height:19px;
	margin-top: 3px;
	margin-right:10px;
}
.deleteText{
	float: left;
	font-size:1.6em;
	color:#333;
	line-height:25px;
}
.addAddress{
	z-index: 100;
	position: fixed;
	width: 100%;
	height: 50px;
	color: #FFFFFF;
	background:#D13600;
	left: 0;
	bottom: 0;
	outline: none;
	border: none;
	font-size: 1.8em;
}

.editDiv{
	float: right;
	height: 25px;
	margin-right:20px;
}
.editImg{
	float: left;
	height:19px;
	margin-top: 3px;
	margin-right:5px;
}
.editText{
	float: left;
	font-size:1.6em;
	color:#333;
	line-height:25px;
}

.checkboxDiv {
	position: relative;
	width: 17px;
	height: 17px;
	background-color: #FFFFFF;
	border-radius:50%;
	float: left;
    z-index: 99;
    margin-top: 4px;
}
.option-input { 
	-webkit-appearance: none; 
	position: relative; 
	width: 20px; 
	height: 20px; 
	-webkit-transition: all 0.15s ease-out 0; 
	background: #fff; 
	border: none; 
	color: #fff; 
	cursor: pointer; 
	display: inline-block; 
	outline: none; 
	position: relative; 
	margin-right: 0.5rem; 
	z-index: 1000;
	border: 1px solid #D13600;
	border-radius: 50%;
} 
.option-input:checked { 
	background: #D13600; 
} 
.option-input:checked::before { 
	opacity: 1;
	content: '';
	position: absolute;
	width: 8px;
	height: 5px;
	background: transparent;
	top: 4px;
	left: 4px;
	border: 2px solid #fff;
	border-top: none;
	border-right: none;
	-webkit-transform: rotate(-45deg);
} 
.defaultAddress{
	float: left;
	margin-left:7%;
	height: 25px;
}
.oneAddressDiv{
	border-top: 1px solid #EBECEE;
	border-bottom: 1px solid #EBECEE;
	margin-top: 10px;
}
