*{
	padding: 0;
	margin: 0;
}
.clear{
	clear: both;
}
body{
	width:100%;
	height: 100%;
	font-size:62.5%;
	background:#F5F5F5;
}
.oldNickName{
	background: #FFFFFF;
	height: 50px;
	line-height: 50px;
	font-size: 1.4em;
	color: #333;
	/* padding-left: 10%; */
	width:100%;
	border-bottom:1px solid #F1F1F1;
}
.newNickName{
	background: #FFFFFF;
	height: 50px;
	line-height: 50px;
	color: #333;
	padding-left: 10%;
}
#nickName{
	height: 30px;
	border: none;
	outline: none;
	font-size:1.4em;
}
.surenBtn{
	height: 42px;
	width: 94%;
	margin-left: 3%;
	font-size: 1.8em;
	background: #D13600;
	border: none;
	outline: none;
	border-radius: 6px;
	margin-top: 60px;
	color:#fff;
}
#nickError{
	font-size: 1.2em;
	margin-left: 10%;
	margin-top: 3px;
	color: red;
}
.p_view {
	text-align: center;
	position: absolute;
	top: 45%;
}

.p_view>span {
	background-color: #000;
	color: #fff;
	word-wrap: break-word;
	padding: 5px 10px;
	z-index: 377777;
	border-radius: 5px;
	display: block;
	font-size:16px;
}