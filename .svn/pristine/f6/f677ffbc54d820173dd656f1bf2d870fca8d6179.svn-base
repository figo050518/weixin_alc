<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fcgo.weixin.persist.dao.IProductSpecDAO" >
  <insert id ="batchInsert" parameterType="java.util.List" >
		<selectKey resultType ="java.lang.Integer" keyProperty= "id"
				   order= "AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey >
		INSERT INTO pdt_product_spec (product_id,spec_name,stock,original_price,sales_price,create_time,update_time,create_name,update_name)
		VALUES
		<foreach collection="list" item="item" index="index" separator="," >
			(#{item.productId},#{item.specName},#{item.stock},#{item.originalPrice},#{item.salesPrice},#{item.createTime},#{item.updateTime},#{item.createName},#{item.updateName})
		</foreach>
	</insert>
	
	<update id="deleteNotExist">
		update
		pdt_product_spec
		set is_delete =1
		where id not in 
		<foreach collection="list" index="index" item="item" open="(" separator="," close=")">  
            #{item}   
    	</foreach>
    	AND product_id =#{productId}
	</update>
	
	
	  <select id="findByProductIds" resultMap="BaseResultMap"  >
    select 
    <include refid="Base_Column_List" />
		from pdt_product_spec where product_id in
		<foreach collection="list" index="index" item="item" open="(" separator="," close=")">  
            #{item}   
    	</foreach>
    	and is_delete = 0
	</select>
	
	<update id="batchUpdate"  parameterType="java.util.List">  
        
          <foreach collection="list" item="item" index="index" open="" close="" separator=";">  
                update pdt_product_spec   
                <set>  
                  spec_name=#{item.specName,jdbcType=VARCHAR}, stock=#{item.stock,jdbcType=INTEGER}, sales_price=#{item.salesPrice,jdbcType=DECIMAL}, update_time=#{item.updateTime,jdbcType=TIMESTAMP}, update_name=#{item.updateName,jdbcType=VARCHAR} 
                 </set>  
                where id = #{item.id}  
         </foreach>  
            
    </update> 
	
</mapper>