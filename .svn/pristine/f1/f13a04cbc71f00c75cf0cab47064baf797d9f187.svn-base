<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fcgo.weixin.persist.dao.IOperGroupDAO" >
  <resultMap id="PageOperGroupMap" type="com.fcgo.weixin.persist.po.OperGroupPO" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="group_name" property="groupName" jdbcType="VARCHAR" />
    <result column="is_delete" property="isDelete" jdbcType="INTEGER" />
    <result column="create_name" property="createName" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_name" property="updateName" jdbcType="VARCHAR" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="delete_name" property="deleteName" jdbcType="VARCHAR" />
    <result column="delete_time" property="deleteTime" jdbcType="TIMESTAMP" />
  </resultMap>
   <select id="getOperGroupListPage" parameterType="map" resultMap="PageOperGroupMap">
  		select id, group_name, is_delete,  create_name, create_time,
  		update_name,update_time, delete_name, delete_time 
  		from oper_group where 1=1
    	<if test="groupName!=null and groupName!=''">
			AND group_name like #{groupName,jdbcType=VARCHAR} 
		</if>
		<if test="sorter!=null and sorter!=''">
			 ORDER BY #{sorter}
		</if>
  		  limit #{startPage, jdbcType=DECIMAL},#{pageSize, jdbcType=DECIMAL}
  </select>
</mapper>